#tigaz.modal.case
  .modal__header Тигаз
  .grid.grid--container
    .row
      .col.col--sm-8
        span.modal__label Задача
        .modal__desc Торговая марка переворачивает рекламный бриф. Особенность рекламы последовательно отражает экспериментальный рекламный бриф. Клиентский спрос отталкивает рекламный макет. План размещения довольно хорошо сбалансирован.
      .col.col--sm-2.col--sm-offset-1
        span.modal__label Год
        .modal__desc 2018
  .case__section
    span.modal__label Главная страница
    .case__img
      img(src="./img/tigaz/1.jpg", alt="")
  .case__section
    .grid.grid--container
      span.modal__label Типографика
      .row
        .col.col--sm-6
          img(src="./img/typography/proxima-nova/Aa.svg", alt="")
        .col.col--sm-6
          .case__typography
            img(src="./img/typography/proxima-nova/proxima-nova.svg", alt="")
          .case__typography
            img(src="./img/typography/proxima-nova/alphabet.svg", alt="")
  .case__section
    .grid.grid--container
      .row
        .col.col--sm-6
          span.modal__label Цвета
          .colors
            .color(style="background-color: #003E6C")
              .color__name #003E6C
            .color(style="background-color: #CF161E")
              .color__name #CF161E
            .color(style="background-color: #898E95")
              .color__name #898E95
            .color(style="background-color: #F2F5F8")
              .color__name.color__name--gray #F2F5F8
            .color(style="background-color: #E2E8EE")
              .color__name.color__name--gray #E2E8EE
        .col.col--sm-6
          span.modal__label Версии
          img(src="./img/adaptive.svg", alt="")
  .case__section
    .grid.grid--container
      span.modal__label Внутренние страницы
      .row
        .col.col--sm-6
          .case__img
            img(src="./img/tigaz/2.jpg", alt="")
          .case__img
            img(src="./img/tigaz/4.jpg", alt="")
        .col.col--sm-6
          .case__img
            img(src="./img/tigaz/3.jpg", alt="")
          .case__img
            img(src="./img/tigaz/5.jpg", alt="")
          .case__img
            img(src="./img/tigaz/6.jpg", alt="")
