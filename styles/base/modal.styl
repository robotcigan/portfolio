.mfp-bg
  animation modalBg 1s ease

.mfp-content
  position initial
//   display flex
  // justify-content flex-end

.modal
  animation bigFadeUp .5s cubic-bezier(0.64, 0.04, 0.35, 1) forwards
  // background $main + 15%
  background #222223
  box-shadow 0 1rem 2rem rgba($main, .1)
  display none
  // display block
  min-height 100vh
  padding 9.6rem
  position absolute
  right 0
  top 0
  width 80%
  &__container
    // margin 6.4rem 0
    // padding 2.4rem 8rem
    // text-align center
  &__header
    color #fff
    font-size 4.8rem
    font-weight 700
    margin-bottom 3.2rem
  &__desc
    font-weight 300
    line-height (24 / 16)
    margin-bottom 4rem
  &__label
    display block
    font-weight 400
    font-size 1.4rem
    margin-bottom 1.6rem
    opacity .5
  &--callback
    width 50vw
    .mfp-close,
    .mfp-close:active
      right 52vw


.mfp-ready
  .modal
    display block
    top 0 !important

// .mfp-close-btn-in .mfp-close,
// .mfp-close-btn-in .mfp-close:active
.mfp-close,
.mfp-close:active
  // background-color #fff
  border-radius 50%
  color #fff !important
  font-size 4rem
  opacity 1
  position fixed
  top 1.6rem
  right 82vw

.mfp-close
  circle(6rem)

.callback-before-send
  display block
  &--disable
    display none
.callback-success-send
  display none
  &--active
    display block

@keyframes modalBg
  0%
    opacity 0
  100%
    opacity .8

@keyframes bigFadeUp
  0%
    transform translateX(100%)
  100%
    transform none

@media(max-width 1200px)
  .modal
    width 90vw
  .modal--callback
    width 60vw
  .mfp-close-btn-in .mfp-close,
  .mfp-close-btn-in .mfp-close:active
    top .5rem
    right .5rem

@media(max-width 767px)
  .mfp-container
    padding 0
  .modal
    padding 6rem 6%
    top 0
    right 0
    width 100%
